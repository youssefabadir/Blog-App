<h1 class="title is-2 has-text-grey">Editing Comment</h1>

<%= simple_form_for([@post, @comment]) do |f| %>
<div class="field">
  <div class="control">
    <%= f.input :comment, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' } %>
  </div>
</div>

  <%= f.button :submit, 'Update', class:'button is-info' %>
<% end %>